<!DOCTYPE html>
<html lang="fr">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Liste des Réservations - Hôtel California</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gray-50">
    <%- include('../partials/navbar') %>

        <div class="max-w-6xl mx-auto p-6">
            <h1 class="text-2xl font-bold mb-2">Réservations</h1>
            <p class="text-gray-600 mb-4">
                <%= reservations.length %> <%= reservations.length > 1 ? "réservations" : "réservation" %>
            </p>

            <div class="mb-4">
                <a href="/reservations/create" class="bg-gray-800 text-white px-4 py-2 hover:bg-gray-700">Ajouter une réservation</a>
            </div>

            <% if (reservations.length===0) { %>
                <div class="bg-white border p-4">
                    <p><strong>Aucune réservation disponible</strong></p>
                    <p>Commencez par ajouter une réservation.</p>
                </div>
                <% } else { %>
                    <table class="w-full bg-white border">
                        <thead>
                            <tr class="border-b">
                                <th class="text-left p-3">Client</th>
                                <th class="text-left p-3">Chambre</th>
                                <th class="text-left p-3">Séjour</th>
                                <th class="text-left p-3">Durée</th>
                                <th class="text-left p-3">Statut</th>
                                <th class="text-left p-3">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% for (let reservation of reservations) { %>
                                <% 
                                  const now = new Date();
                                  const start = new Date(reservation.dateDebut);
                                  const end = new Date(reservation.dateFin);
                                  let statut = '';
                                  if (now < start) statut = 'À venir';
                                  else if (now >= start && now <= end) statut = 'En cours';
                                  else statut = 'Terminée';
                                  const MS_PER_DAY = 1000 * 60 * 60 * 24;
                                  const nights = Math.max(1, Math.round((end - start) / MS_PER_DAY));
                                  const badgeClass =
                                    statut === 'En cours' ? 'bg-green-100 text-green-800' :
                                    (statut === 'À venir' ? 'bg-blue-100 text-blue-800' : 'bg-gray-100 text-gray-800');
                                %>
                                <tr class="border-b">
                                    <td class="p-3"><%= reservation.nomClient %></td>
                                    <td class="p-3">Chambre <%= reservation.numero %> <span class="text-xs text-gray-500">(cap. <%= reservation.capacite %>)</span></td>
                                    <td class="p-3">Du <%= reservation.getFormattedDateDebut() %> au <%= reservation.getFormattedDateFin() %></td>
                                    <td class="p-3"><%= nights %> <%= nights > 1 ? "nuits" : "nuit" %></td>
                                    <td class="p-3">
                                        <span class="px-2 py-1 text-sm rounded <%= badgeClass %>"><%= statut %></span>
                                    </td>
                                    <td class="p-3">
                                        <a href="/reservations/<%= reservation.idReservation %>" class="text-blue-600 hover:underline mr-2">Voir</a>
                                        <a href="/reservations/<%= reservation.idReservation %>/edit" class="text-blue-600 hover:underline mr-2">Modifier</a>
                                        <a href="/reservations/<%= reservation.idReservation %>/delete" class="text-red-600 hover:underline">Supprimer</a>
                                    </td>
                                </tr>
                                <% } %>
                        </tbody>
                    </table>
                    <% } %>
        </div>

        <%- include('../partials/footer') %>
</body>

</html>